syntax "yaml" "\.yaml$"
header "^---" "%YAML"

TYPE:     "(^| )!!(binary|bool|float|int|map|null|omap|seq|set|str) "
BOOLEAN:  "\<(YES|yes|Y|y|TRUE|true|ON|on|NO|no|N|n|FALSE|false|OFF|off)\>"
OPERATOR: ":[[:space:]]" "\[" "\]" ":[[:space:]]+[|>]" "^[[:space:]]*- "
VARIABLE: "[[:space:]][\*&][A-Za-z0-9]+"
STRING:   "[[:space:]]*"(\\.|[^"])*"($|[[:space:]])"
STRING:   "[[:space:]]*'(\\.|[^'])*'($|[[:space:]])"
COMMENT:  "(^|[[:space:]])#.*$"
FUNCTION: "^---" "^\.\.\." "^%YAML" "^%TAG"

+LINT
